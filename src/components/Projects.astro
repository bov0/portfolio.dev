---
import GitHub from "../icons/Github.astro";
import Python from "../icons/Python.astro";
import MongoDB from "../icons/MongoDB.astro";
import Javascript from "../icons/Javascript.astro";
import Bootstrap from "../icons/Bootstrap.astro";
import React from "../icons/React.astro";
import TailwindCSS from "../icons/TailwindCSS.astro";
import NextUI from "../icons/NextUI.astro"
import LinkButton from "./LinkButton.astro";

const TAGS = {
  TAILWINDCSS: {
    name: "Tailwind",
    class: "bg-indigo-500 text-white",
    icon: TailwindCSS,
  },
  REACT: {
    name: "React",
    class: "bg-cyan-500 text-white",
    icon: React,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-purple-500 text-white",
    icon: Bootstrap,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-500 text-white",
    icon: Javascript,
  },
  PYTHON: {
    name: "Python.js",
    class: "bg-gradient-to-r from-yellow-500 to-blue-500 text-white",
    icon: Python,
  },
  MONGODB: {
    name: "MongoDB",
    class: "bg-[green] text-white",
    icon: MongoDB,
  },
  NEXTUI: {
    name: "NextUI",
    class: "bg-gray-800 text-white",
    icon: NextUI,
  },
};
const PROJECTS = [
  {
    title: "Concesionario GMC - Creación de concesionario para compraventa de vehículos",
    description: "Aplicación SPA de compraventa de vehículos utilizando React, TailwindCSS, NextUI para el front y Python Fast API para gestionar el backend mediante solicitudes a distintas APIs",
    link: "https://tfg-concesionario.vercel.app/",
    github: ["https://github.com/bov0/TFG-Concesionario","https://github.com/bov0/TFG-Backend"],
    image: "/projects/Concesionario.png",
    tags: [TAGS.REACT, TAGS.TAILWINDCSS, TAGS.NEXTUI, TAGS.PYTHON],
  },
  {
    title: "Ecommerce GZ Shop - Creación de ecommerce usando solamente frontend",
    description: "Ecommerce con registro y login de usuarios, carrito y venta de producto usando localStorage y Cookies",
    link: "https://ecommerce-front-end-two.vercel.app/",
    github: ["https://github.com/bov0/ecommerce-FrontEnd"],
    image: "/projects/FrontEnd-Ecommerce.png",
    tags: [TAGS.JAVASCRIPT, TAGS.BOOTSTRAP],
  },
  {
    title: "FastAPI - Creación de fastAPI usando MongoDB como BBDD",
    description: "FastAPI con acceso a base de datos en MongoDB con funciones,GET,POST,UPDATE y DELETE con interfaz gráfica haciendo uso de swagger.",
    link: "https://fast-api-mongo-db-ivan-marcos.vercel.app/docs",
    github: ["https://github.com/bov0/FastAPIMongoDB-IvanMarcos"],
    image: "/projects/FastAPI-MongoDB.png",
    tags: [TAGS.PYTHON, TAGS.MONGODB],
  },
  {
    title: "CRUD animales - Administración de zoo con métodos para administración de los animales",
    description: "Herramienta de gestión para Zoológico mediante CRUD creada mediante python Flask.",
    link: "https://tr2-pr1-ej1-ivanmarcos.vercel.app/",
    github: ["https://github.com/bov0/TR02-PR01-IvanMarcos"],
    image: "/projects/RestAPI.png",
    tags: [TAGS.PYTHON],
  },
];
---

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article>
        <h3 class="text-2xl font-semibold text-blue-300 dark:text-yellow-200 mb-2">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && github.map((repo) => (
            <LinkButton href={repo} key={repo}>
              <GitHub class="size-6" />
              Ver código fuente
            </LinkButton>
          ))}
          <LinkButton href={link}>
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
              <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
              <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
              <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
              <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
              <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
              <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
              <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
              <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
            </svg>
            Ir al sitio web
          </LinkButton>
        </footer>
      </article>
    ))
  }
</section>